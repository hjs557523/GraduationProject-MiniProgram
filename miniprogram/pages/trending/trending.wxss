/* pages/trending/trending.wxss */

page {
  background: #fff;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90rpx;
  margin-bottom: 8vh;
  border-bottom: 1px solid #e9e4e6;
  border-top: 1px solid #e9e4e6;
  font-style:italic;
}

.header .location {
  color: rgba(0, 0, 0, 0.66);
  font-size: 30rpx;
}

.header .desc {
  display: inline-block;
  margin-left: 13rpx;
  padding-left: 16rpx;
  border-left: 1rpx solid #e4e4e4;
}

.header .desc .icon {
  border-radius: 100%;
  display: inline-block;
  height: 8px;
  margin: 6rpx 10rpx 9rpx 0;
  vertical-align: middle;
  width: 8px;
  background: #9e9e9e;
}

.header .desc .desc-text {
  line-height: 15px;
  color: #5f6368;
  font-size: 20rpx;
}

.music {
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.3);
}

.nav {
  position: absolute;
  bottom: 15vh;
}
