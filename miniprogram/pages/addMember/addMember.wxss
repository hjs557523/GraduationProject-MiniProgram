Page {
  background: white;
  min-height: 100vh;
  position: absolute;
  top: 0;
}

.detail {
  margin: 30rpx 60rpx;
}

.label {
  font-weight: bold;
  color: #bbbec4;
  font-size: 0.91rem;
  margin-bottom: 10rpx;
}

.people {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
  border-radius: 20rpx;
  position: relative;
}

.icon {
  width: 1.3rem;
  height: 1.3rem;
  /* padding-top: 10rpx; *//* border-radius: 100%;
