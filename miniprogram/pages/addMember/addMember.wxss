}

.me {
  position: absolute;
  right: 20rpx;
  color: #999ca3;
  font-weight: bold;
  font-size: 10pt
}

.button {
  margin: 60rpx 70rpx;
  /* margin-top: 150rpx; */
  border-radius: 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-color: #eee;
  font-weight: bold;
  background-color: #eee;
  position: absolute;
  bottom: 0;
  width: 600rpx;
  font-size: 10pt;
  color: rgb(207, 11, 11);
